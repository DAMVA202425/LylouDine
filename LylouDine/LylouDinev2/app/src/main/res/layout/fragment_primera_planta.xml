<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <EditText
        android:id="@+id/search_mesa"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Buscar Mesa"
        android:drawableEnd="@android:drawable/ic_menu_search"
        android:padding="8dp"
        android:background="@android:drawable/edit_text"
        android:textColor="@android:color/black"
        android:textColorHint="@android:color/darker_gray"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:padding="8dp">

        <LinearLayout
            android:id="@+id/mesa_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"/>
    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="8dp">

        <Button
            android:id="@+id/btn_toggle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Acciones de Mesa" />

        <LinearLayout
            android:id="@+id/toggle_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone"
            android:paddingTop="8dp">

            <Button
                android:id="@+id/btn_add_mesa"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Agregar Mesa" />

            <Button
                android:id="@+id/btn_remove_mesa"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Eliminar Mesa" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
