<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Tema principal de la aplicación -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Colores principales -->
        <item name="colorPrimary">#4D648D</item>
        <item name="colorPrimaryDark">#1E1F26</item>
        <item name="colorAccent">#D0E1F9</item>

        <!-- Personalizar barra de acción -->
        <item name="android:actionBarStyle">@style/ActionBar</item>
        <item name="android:actionBarWidgetTheme">@style/ActionBar</item>

        <!-- Colores para las ventanas -->
        <item name="android:windowBackground">#D0E1F9</item>
        <item name="android:statusBarColor">#1E1F26</item>
    </style>

    <!-- Estilo de la barra de acción -->
    <style name="ActionBar" parent="Widget.AppCompat.ActionBar.Solid">
        <item name="android:background">#283655</item>
    </style>

    <!-- Estilos para botones -->
    <style name="ButtonStyle" parent="Widget.AppCompat.Button">
        <item name="android:backgroundTint">#4D648D</item>
    </style>

    <color name="styles" />
</resources>